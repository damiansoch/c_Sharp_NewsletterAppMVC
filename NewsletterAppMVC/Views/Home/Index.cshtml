<div class="row g-0 m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Sign up to our newsletter</h5>
        </div>
        <div class="card-body">
            @* creating forms inside MVC *@
            @using (Html.BeginForm("SignUp", "Home", FormMethod.Post))
            {
                <div class="row g-0">
                    <div class="form-group col-md-12">
                        <input type="text" name="FirstName" value="" class="form-control mb-3" placeholder="First Name" />
                    </div>
                    <div class="form-group col-md-12">
                        <input type="text" name="LastName" value="" class="form-control mb-3" placeholder="Last Name" />
                    </div>
                    <div class="form-group col-md-12">
                        <input type="text" name="EmailAddress" value="" class="form-control mb-3" placeholder="Email Address" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Sign up</button>
                </div>
            }
        </div>
    </div>
</div>